Public Sub FindStrings(sPrefix As String) As Integer[]
  
  Dim iLine As Integer
  
  'If sPrefix = $sFindPrefix Then Return $aFind
  
  $sFindPrefix = sPrefix
  $aFind = New Integer[]
  
  iLine = -1
  Do
  
    iLine = Me.FindNextString(sPrefix, iLine + 1)
